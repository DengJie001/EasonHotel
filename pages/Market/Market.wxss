/* pages/Market/Market.wxss */
.VerticalNav.nav {
  width: 200rpx;
  white-space: initial;
}

.VerticalNav.nav .cu-item {
  width: 100%;
  text-align: center;
  background-color: #fff;
  margin: 0;
  border: none;
  height: 50px;
  position: relative;
}

.VerticalNav.nav .cu-item.cur {
  background-color: #f1f1f1;
}

.VerticalNav.nav .cu-item.cur::after {
  content: "";
  width: 8rpx;
  height: 30rpx;
  border-radius: 10rpx 0 0 10rpx;
  position: absolute;
  background-color: currentColor;
  top: 0;
  right: 0rpx;
  bottom: 0;
  margin: auto;
}

.VerticalBox {
  display: flex;
}

.VerticalMain {
  background-color: #f1f1f1;
}

.btnSuspension {
  position: fixed;
  height: 100rpx;
  width: 100rpx;
  background-color: rgba(28, 187, 180, 0.9);
  display: flex;
  align-items: center;
  justify-content: center;
  z-index: 99999;
  border-radius: 50px;
  box-shadow: #1CBBB4 0px 0px 5px;
}